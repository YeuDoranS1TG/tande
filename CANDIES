using namespace std;
typedef long long ll;
int n; ll m;
vector<ll>v,pref;
ll dothatvong(int val){
    ll pos=lower_bound(v.begin(),v.end(),val)-v.begin();
    ll sum = pref[pos] + 1LL * (n - pos) * val;
    return sum;
}
