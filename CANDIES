/*
#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
int n;
ll m;
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    freopen("CANDIES.INP","r",stdin);
    freopen("CANDIES.OUT","w",stdout);
    cin>>m>>n;
    vector<ll>v(n);
    ll sum=0;
    for (int i=0;i<n;++i){
        cin>>v[i];
        sum+=v[i];
    }
    ll remains=sum-m;
    sort(v.begin(),v.end());
    __int128 ans = 0;
    int i=0;
    while (i<n){
        int du=n-i;
        if (du==0) break;
        ll soluong=remains/du;
        if (v[i]<=soluong){
            ans+=1LL*v[i]*v[i];
            remains-=v[i];
            ++i;
        }
        else {
            ll x=remains%du;
            ll y=du-x;
            ans+=1LL*y*soluong*soluong;
            ans+=1LL*x*(soluong+1)*(soluong+1);
            remains=0;
            break;
        }
    }
    if (remains>0) ans+=1LL*remains*remains;
    cout<<(long long)ans;
    return 0;
}
*/

#include <bits/stdc++.h>
using namespace std;
int main()
{
    freopen("CANDIES.INP","r",stdin);
    freopen("CANDIES.OUT","w",stdout);
    long long a[100000];
    long long m,n;
    cin>>m>>n;
    int k=n;
    long long ans=0,minval=0;
    long long sum=-m;
    for (int i=0;i<n;++i){
        cin>>a[i];
        sum+=a[i];
    }
    long long average=sum/n;
    sort(a,a+n);
    while(a[minval]<average){
        for(int i=minval;i<n; ++i){
            if(a[i]<average){
                k-=1;
                ans+=a[i]*a[i];
            }
        }
        sum=-m,average=0;
        for (int i=n-k;i<n;++i){
            sum+=a[i];
        }
        average=sum/k;
        minval=n-k;
    }
    int units=sum%k;
    ans+=1LL*average*average*k + units*(2*average+1);
    cout<<ans;
    return 0;
}

