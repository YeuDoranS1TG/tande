        if (x[i]<v[i]){
            ++x[i];
            --remain;
        }
    }
    ll answer=1;
    for (int i=0;i<n;++i){
        ll dif=v[i]-x[i];
        answer=1LL*dif*dif;
    }
    cout<<answer;
    return 0;
}
