#include <bits/stdc++.h>
using namespace std;
int n,m,a[100005],b[100005];
struct nest{
    int a,b;
};
bool ss(const nest &x, const nest &y){
    return x.b-x.a<y.b-y.a;
}
int main()
{
    freopen("COINS.INP","r",stdin);
    freopen("COINS.OUT","w",stdout);
    cin>>n>>m;
    vector<nest>qua(n);
    for (int i=0;i<n;++i){
        cin>>qua[i].a;
    }
    for (int i=0;i<n;++i){
        cin>>qua[i].b;
    }
    sort(qua.begin(),qua.end(),ss);
    for (int i=0;i<n;++i){
        int val=qua[i].b-qua[i].a;
        if (m>=val) m+=qua[i].a;
    }
    cout<<m;
    return 0;
}
