#include <bits/stdc++.h>
using namespace std;
#define ll long long
vector<pair<ll,ll>>v;
bool ss(const pair<ll,ll>&x, const pair<ll,ll>&y){
    if (x.first!=y.first) return x.first<y.first;
    return x.second<y.second;
}
ll area(pair<ll,ll> x, pair<ll,ll> y, pair<ll,ll> z){
    return 1LL*(y.first-x.first)*(z.second-x.second) - 1LL*(y.second-x.second)*(z.first-x.first);
}
int main()
{
    freopen("CONVEXHULL.INP","r",stdin);
    freopen("CONVEXHULL.OUT","w",stdout);
    int n;
    cin>>n;
    for (int i=0;i<n;++i){
        ll x,y;
        cin>>x>>y;
        v.push_back({x,y});
    }
    sort(v.begin(),v.end(),ss);

    vector<pair<ll,ll>>C1,C2;
    for (int i=0;i<n;++i){
        while (C1.size()>=2 && area(C1[C1.size()-2],C1.back(),v[i])<=0)
            C1.pop_back();
        C1.push_back(v[i]);
    }
    for (int i=n-1;i>=0;--i){
        while (C2.size()>=2 && area(C2[C2.size()-2],C2.back(),v[i])<=0)
            C2.pop_back();
        C2.push_back(v[i]);
    }
    C2.pop_back();
    C1.pop_back();

    vector<pair<ll,ll>> hull = C1;
    hull.insert(hull.end(), C2.begin(), C2.end());
    cout<< hull.size()<<'\n';
    long double S=0;
    int m=hull.size();
    for (int i=0;i<m;++i){
        int j=(i+1)%m;
        S += 1LL*hull[i].first * hull[j].second - 1LL*hull[j].first * hull[i].second;
    }

    cout<<fixed<<setprecision(1)<<fabsl(S)/2.0<<'\n';
    for (int i=1;i<m;++i) cout<<hull[i].first<<" "<<hull[i].second<<'\n';
    cout<<hull[0].first<<" "<<hull[0].second<<'\n';
    return 0;
}

