#include <bits/stdc++.h>
using namespace std;
int main()
{
    freopen("ANASUM.INP","r",stdin);
    freopen("ANASUM.OUT","w",stdout);
    int n; cin>>n;
    vector<long long>a(n);
    for (int i=0;i<n;++i) cin>>a[i];
    sort(a.begin(),a.end());
    long long sum=1;
    for (int i=0;i<n;++i){
        if (sum<a[i]) break;
        else sum+=a[i];
    }
    cout<<sum;
    return 0;
}
