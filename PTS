#include<bits/stdc++.h>
using namespace std;
int n,m;
long long sum=0;
vector<long long>a,b;
int main()
{
    freopen("PTS.INP","r",stdin);
    freopen("PTS.OUT","w",stdout);
    cin>>n>>m;
    for(int i=0;i<n;++i){
        long long x;
        cin>>x;
        a.push_back(x);
    }
    for (int i=0;i<m;++i){
        long long x;
        cin>>x;
        b.push_back(x);
    }
    sort(a.begin(),a.end());
    sort(b.begin(),b.end());
    int x=0,y=0;
    while (x<n && y<m){
        if (a[x]<b[y]){
            sum+=m-y;
            ++x;
        }
        else ++y;
    }
    cout<<sum;
    return 0;
}
