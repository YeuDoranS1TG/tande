#include <bits/stdc++.h>
using namespace std;
int main()
{
    freopen("STRESS.INP","r",stdin);
    freopen("STRESS.OUT","w",stdout);
    long long n;
    vector<long long>v;
    cin>>n;
    long long m=2*n;
    while (m>0){
        if (m%2==0) m/=2;
        else {
            v.push_back(n);
            --m;
        }
        --n;
    }
    reverse(v.begin(),v.end());
    cout<<v.size()<<'\n';
    for (auto x:v){
        cout<<x<<" ";
    }
    return 0;
}
