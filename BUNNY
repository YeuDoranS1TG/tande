#include <bits/stdc++.h>
using namespace std;
int main()
{
    freopen("BUNNY.INP","r",stdin);
    freopen("BUNNY.OUT","w",stdout);
    unsigned long long n;
    cin>>n;
    unsigned long long k=n/6;
    unsigned long long f=n%6;
    if (n%6==0) f=1;
    unsigned long long i=1e6;
    unsigned long long res = (f + (k%i)*(n%6) + 3*(k%i)*((k+1)%i)) % i;
    cout<<res;
    return 0;
}
