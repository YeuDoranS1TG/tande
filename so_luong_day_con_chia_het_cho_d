#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
vector<int>v;
int main()
{
    int n,d;
    ll cnt=0;
    cin>>n>>d;
    for (int i=0;i<n;++i){
      ll x;
      cin>>x;
      v.push_back(x);
    }
    long long pref[n+1]={0};
    for (int i=0;i<n;++i){
        pref[i+1]=pref[i]+v[i];
    }
    map<ll,int>mp;
    for (int i=0;i<=n;++i){
        int res=(pref[i]%d+d)%d;
        ++mp[res];
    }
    for (int i=0;i<d;++i){
        if (mp[i]<2) continue;
        cnt+=1LL*mp[i]*(mp[i]-1)/2;
    }
    cout<<cnt;
    return 0;
}
