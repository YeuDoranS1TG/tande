#include <bits/stdc++.h>
using namespace std;
bool ss (const pair<long long,long long>& x, const pair<long long,long long>& y) {\
    if (x.second==y.second) return x.first<y.first;
    return x.second<y.second;
}
int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
    freopen("POPUST.INP","r", stdin);
    freopen("POPUST.OUT","w", stdout);
    long long n;
    cin>>n;
    pair<long long,long long>a[n + 1];
    long long prefix[n + 1];
    prefix[0]=0;
    long long ans[n+1];
    fill_n(ans,n+1,0LL);
    ans[0]=(long long)1e18;
    for(long long i=0; i<n; ++i) {
        cin >> a[i].first >> a[i].second;
    }
    sort(a, a+n, ss);
    for(long long i=0; i<n; ++i) {
        prefix[i+1]= prefix[i]+a[i].second;
        ans[i+1] = min(ans[i],a[i].first - a[i].second);
    }
    long long suf[n+1];
    fill_n(suf, n+1, 0LL);
    suf[n]=(long long)1e18;
    for(long long i=n-1; i>=0;--i) {
        suf[i] = min(suf[i+1], a[i].first);
    }
    cout << suf[0] << '\n';
    long long dem[n+1];
    fill_n(dem, n+1, 0LL);
    dem[0] = suf[0];
    for(long long i = 1; i < n; ++i) {
        dem[i] = min(suf[i] + prefix[i], prefix[i+1] + ans[i]);
        cout << dem[i] << '\n';
    }
}

